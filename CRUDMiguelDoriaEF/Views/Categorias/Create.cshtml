@model CRUDMiguelDoriaEF.Models.Categoria

@{
    ViewData["Title"] = "Categorías";
}


<div class="row" style="padding: 20px; height: 80vh; display: flex; justify-content: center; align-items: center;">
    <div class="col-md-4">
        <h2 class="text-center">Crear Categoria</h2>
        <hr />
        <br /> <br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoCategoria" class="control-label" style="margin-bottom: 10px">Codigo de Categoría:</label>
                <input asp-for="CodigoCategoria" class="form-control" placeholder="Ingresa..." required />
                <span asp-validation-for="CodigoCategoria" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label" style="margin-bottom: 10px">Nombre:</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingresa..." required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group text-center" style="margin-left: 188px; margin-top: 60px">
                <a asp-action="Index" class="btn btn-success" id="botones" style="margin-right: 10px">Cancelar</a>
                <button type="submit" onclick="alertRegistro()" class="btn btn-success" id="botonesRegistro" />Crear Categoría<button />
            </div>
        </form>
    </div>
</div>

<hr style="margin-top: 60px">
<footer class="text-break" style="margin-left: 1110px">
    <p>
        ©2024 Libros Para Todos S.A - Todos los Derechos Reservados
    </p>
</footer>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
