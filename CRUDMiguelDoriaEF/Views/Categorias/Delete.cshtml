@model CRUDMiguelDoriaEF.Models.Categoria

@{
    ViewData["Title"] = "Categorías";
}

<div class="row justify-content-center" style="padding: 20px">
    <div class="col-md-6">
        <h2 class="text-center">¿Estás seguro de Eliminar el registro?</h2>
        <br /><br /><br />
        <dl class="row">
            <hr />
            <dt class="col-sm-2">
                Nombre:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <hr />
        </dl>

        <br />
        <form asp-action="Delete">
            <input type="hidden" asp-for="CodigoCategoria" />
            <div class="text-center" style="margin-left: 490px; margin-top: 200px">
                <a asp-action="Index" class="btn btn-success" style="margin-right: 10px;">Cancelar</a>
                <input type="submit" value="Eliminar" class="btn btn-success" id="botones" />
            </div>
        </form>
    </div>
</div>
<hr style="margin-top: 60px">
