@model CRUDMiguelDoriaEF.Models.Categoria

@{
    ViewData["Title"] = "Categorías";
}

<div class="row justify-content-center" style="padding: 20px">
    <div class="col-md-6">
        <h2 class="text-center">Editar Categoría</h2>
        <br />
        <hr />
        <br /><br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoCategoria" required />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label" style="margin-bottom: 10px">Nombre:</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <br /><br />

            <div class="form-group text-center" style="margin-left: 470px; margin-top: 150px">
                <a asp-action="Index" class="btn btn-success" id="botones" style="margin-right: 10px">Cancelar</a>
                <button type="submit" onclick="alertActualizar()" class="btn btn-success" id="botonesRegistro" /> Actualizar<button/>
            </div>
        </form>
    </div>
</div>

<hr style="margin-top: 60px">
<footer class="text-break" style="margin-left: 1110px">
    <p>
        © 2024 Libros Para Todos S.A - Todos los Derechos Reservados
    </p>
</footer>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
