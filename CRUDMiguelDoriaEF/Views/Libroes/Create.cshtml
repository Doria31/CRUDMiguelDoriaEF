@model CRUDMiguelDoriaEF.Models.Libro

@{
    ViewData["Title"] = "Libros";
}

<div class="row justify-content-center" style="padding: 30px">
    <div class="col-md-8">
        <h1 class="text-center">Registra un Libro</h1>
        <br />
        <hr />
        <br />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Isbn" class="control-label" style="margin-bottom: 10px">Código ISBN:</label>
                        <input asp-for="Isbn" class="form-control" placeholder="Ingresa..." required />
                        <span asp-validation-for="Isbn" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label" style="margin-bottom: 10px">Título:</label>
                        <input asp-for="Titulo" class="form-control" placeholder="Ingresa..." required />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label" style="margin-bottom: 10px">Descripción:</label>
                        <input asp-for="Descripcion" class="form-control" placeholder="Ingresa..." required />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="NombreAutor" class="control-label" style="margin-bottom: 10px">Autor:</label>
                        <input asp-for="NombreAutor" class="form-control" placeholder="Ingresa..." required />
                        <span asp-validation-for="NombreAutor" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Publicacion" class="control-label" style="margin-bottom: 10px">Fecha de Publicación:</label>
                        <input asp-for="Publicacion" class="form-control" placeholder="Ingresa..." type="date" required />
                        <span asp-validation-for="Publicacion" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="FechaRegistro" class="control-label" style="margin-bottom: 10px">Fecha de Registro:</label>
                        <input asp-for="FechaRegistro" class="form-control" placeholder="Ingresa..." type="date" required />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="CodigoCategoria" class="control-label" style="margin-bottom: 10px">Código de Categoría:</label>
                        <select asp-for="CodigoCategoria" class="form-control" asp-items="ViewBag.CodigoCategoria"></select>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="NitEditorial" class="control-label" style="margin-bottom: 10px">Editorial:</label>
                        <select asp-for="NitEditorial" class="form-control" asp-items="ViewBag.NitEditorial"></select>
                    </div>
                    <br />
                    <div class="form-group text-center" style="margin-left: 200px; margin-top: 60px; margin-bottom: 90px">
                        <a asp-action="Index" class="btn btn-danger" id="botones" style="margin-right: 10px">Cancelar</a>
                        <button type="submit" onclick="alertRegistro()" class="btn btn-primary" id="botonesRegistro" />Registra Libro<button />
                    </div>
                </form>
            </div>
        </div>
    </div>
   
</div>
<hr style="margin-top: 60px">
<footer class="text-break" style="margin-left: 1110px">
    <p>
        ©2024 Libros Para Todos S.A - Todos los Derechos Reservados
    </p>
</footer>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
