@model CRUDMiguelDoriaEF.Models.Libro

@{
    ViewData["Title"] = "Libros";
}

<div style="padding: 20px">

    <h1 class="text-center">Detalles del Libro</h1>

    <br /><br />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <dl class="row">
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Título:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Descripción:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Autor:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreAutor)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Fecha de Publicación:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Publicacion)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Fecha de Ingreso:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaRegistro)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Codigo de Categoría:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CodigoCategoriaNavigation.CodigoCategoria)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Nit Editorial:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.NitEditorialNavigation.Nit)</dd>
                </div>
                <hr />
            </dl>
        </div>
    </div>

    <br /><br />
    <!-- Botones centrados -->
    <div class="text-center" style="margin-left: 750px">
        <a asp-action="Index" class="btn btn-danger" style="margin-right: 10px" id="botones">Regresar</a>
        <a asp-action="Edit" asp-route-id="@Model?.Isbn" class="btn btn-warning" id="botonesRegistro">Actualizar</a>
    </div>

</div>

<hr style="margin-top: 60px">
<footer class="text-break" style="margin-left: 1110px">
    <p>
        ©2024 Libros Para Todos S.A - Todos los Derechos Reservados
    </p>
</footer>
