@model CRUDMiguelDoriaEF.Models.Autor


@{
    ViewData["Title"] = "Autores";
}

<div class="row justify-content-center" style="padding: 20px">
    <div class="col-md-6">
        <h2 class="text-center">¿Estás seguro de Eliminar el registro?</h2>
        <br /><br />
        <div>
            <dl class="row">
                <hr />
                <dt class="col-sm-2">
                    Nombre:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <hr />
                <dt class="col-sm-2">
                    Apellido:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>
                <hr />
                <dt class="col-sm-2">
                    Nacionalidad:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nacionalidad)
                </dd>
                <hr />
            </dl>

            <br />
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdAutor" />
                <div class="text-center" style="margin-left: 500px; margin-top: 100px; margin-bottom: 30px">
                    <a asp-action="Index" class="btn btn-success" style="margin-right: 10px">Cancelar</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" id="botones"/>
                </div>
            </form>
        </div>
    </div>
</div>

<hr style="margin-top: 60px">
<footer class="text-break" style="margin-left: 1110px">
    <p>
        ©2024 Libros Para Todos S.A - Todos los Derechos Reservados
    </p>
</footer>
