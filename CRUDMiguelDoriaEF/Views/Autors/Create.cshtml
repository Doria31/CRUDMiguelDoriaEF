@model CRUDMiguelDoriaEF.Models.Autor

@{
    ViewData["Title"] = "Autores";
}


<div class="row justify-content-center" style="padding: 20px">
    <div class="col-md-6">
        <h2 class="text-center">Registra un Autor</h2>
        <hr />
        <br /><br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label" style="margin-bottom: 10px">Nombres:</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingresar..." required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Apellido" class="control-label" style="margin-bottom: 10px">Apellidos:</label>
                <input asp-for="Apellido" class="form-control" placeholder="Ingresar..." required />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label" style="margin-bottom: 10px">Nacionalidad:</label>
                <input asp-for="Nacionalidad" class="form-control" placeholder="Ingresar..." required />
                <span asp-validation-for="Nacionalidad" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group text-center" style="margin-left: 490px; margin-top: 60px">
                <a asp-action="Index" class="btn btn-success" id="botones" style="margin-right: 10px">Cancelar</a>
                <button type="submit" class="btn btn-success"  id="botonesRegistro" onclick="alertRegistro()">Registrar</button>
            </div>
        </form>
    </div>
</div>

<hr style="margin-top: 60px">
<footer class="text-break" style="margin-left: 1110px">
    <p>
        ©2024 Libros Para Todos S.A - Todos los Derechos Reservados
    </p>
</footer>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
