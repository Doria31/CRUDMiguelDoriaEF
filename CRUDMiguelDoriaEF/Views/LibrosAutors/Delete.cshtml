@model CRUDMiguelDoriaEF.Models.LibrosAutor

@{
    ViewData["Title"] = "Libros y Autores";
}

<div class="row justify-content-center" style="padding: 20px;">
    <div class="col-md-6">
        <h3 class="text-center">¿Estás seguro de Eliminar el registro?</h3>

        <br /><br />
        <div>
            <dl class="row">
                <hr />
                <div class="d-flex align-items-center">


                    <dt class="col-sm-3">
                        Id Autor:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.IdAutorNavigation.IdAutor)
                    </dd>
                </div>
                <hr />
                <div class="d-flex align-items-center">
                    <dt class="col-sm-3">
                        Isbn Libro:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.IsbnNavigation.Isbn)
                    </dd>
                </div>
                <hr />
            </dl>
            <br /><br />
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdLibrosAutor" />
                <div class="text-center" style="margin-left: 510px; margin-top: 50px;">
                    <a asp-action="Index" class="btn btn-success" id="botones" style="margin-right: 10px;">Cancelar</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" id="botonesRegistro" />
                </div>
            </form>
        </div>
    </div>
</div>
