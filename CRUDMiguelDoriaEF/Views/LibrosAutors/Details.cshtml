@model CRUDMiguelDoriaEF.Models.LibrosAutor

@{
    ViewData["Title"] = "Libros y Autores";
}

<div class="row justify-content-center" style="padding: 20px">
    <div class="col-md-6">
        <h1 class="text-center">Detalles del Libro y Autor</h1>
        <br />
        <br />

        <div class="row justify-content-center" >
            <div class="col-md-20">
                <hr/>
                <dl class="row">
                    <div class="d-flex mb-3">
                        <dt class="col-sm-3 font-weight-bold">Id Autor</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IdAutorNavigation.IdAutor)</dd>
                    </div>
                    <hr />
                    <div class="d-flex mb-3">
                        <dt class="col-sm-3 font-weight-bold">Isbn Libro</dt>
                        <dd class="col-sm-9 font-weight-bold">@Html.DisplayFor(model => model.IsbnNavigation.Isbn)</dd>
                    </div>
                    <hr/>
                </dl>
            </div>
        </div>

        <div class="form-group text-center" style="margin-top: 60px; margin-bottom: 90px; margin-left: 486px">
            <a asp-action="Index" class="btn btn-secondary" id="botones" style="margin-right: 10px">Regresar</a>
            <a asp-action="Edit" asp-route-id="@Model?.IdLibrosAutor" class="btn btn-warning" id="botonesRegistro">Actualizar</a>
        </div>
    </div>
</div>
<hr style="margin-top: 60px">
<footer class="text-break" style="margin-left: 1110px">
    <p>
        ©2024 Libros Para Todos S.A - Todos los Derechos Reservados
    </p>
</footer>
