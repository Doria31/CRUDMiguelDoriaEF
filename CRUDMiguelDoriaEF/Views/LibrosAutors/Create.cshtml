@model CRUDMiguelDoriaEF.Models.LibrosAutor

@{
    ViewData["Title"] = "Libros y Autores";
}

<div class="row justify-content-center" style="padding: 20px">
    <div class="col-md-6">
    <h1 class="text-center">Registrar Libros y Autores</h1>
    <hr />
    <br />

    <div class="row justify-content-center" style="padding: 20px">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="IdAutor" class="control-label" style="margin-bottom: 10px"></label>
                    <select asp-for="IdAutor" class="form-control" asp-items="ViewBag.IdAutor"></select>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Isbn" class="control-label" style="margin-bottom: 10px"></label>
                    <select asp-for="Isbn" class="form-control" asp-items="ViewBag.Isbn"></select>
                </div>
                <br />

                <!-- Botones centrados -->
                <div class="form-group text-center" style="margin-left: 105px; margin-top: 60px; margin-bottom: 90px">
                    <a asp-action="Index" class="btn btn-secondary" id="botones" style="margin-right: 10px">Cancelar</a>
                        <button type="submit" onclick="alertRegistro()" class="btn btn-primary" id="botonesRegistro" />Registrar<button />
                </div>
            </form>
        </div>
    </div>
    </div>
</div>

<hr style="margin-top: 60px">
<footer class="text-break" style="margin-left: 1110px">
    <p>
        ©2024 Libros Para Todos S.A - Todos los Derechos Reservados
    </p>
</footer>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
