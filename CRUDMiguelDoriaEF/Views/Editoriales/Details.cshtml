@model CRUDMiguelDoriaEF.Models.Editoriale

@{
    ViewData["Title"] = "Editoriales";
}

<div  style="padding: 20px">

    <h2 class="text-center">Detalles de la Editorial</h2>
    <br /><br />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <dl class="row">
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Nombre:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombres)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Telefono:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Dirección:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Email):</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                </div>
                <hr />
                <div class="d-flex mb-3">
                    <dt class="col-sm-3 font-weight-bold">Sitio Web:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Sitioweb)</dd>
                </div>
                <hr />
            </dl>
        </div>
    </div>

    <br />
    <!-- Botones centrados -->
    <div class="text-center" style="margin-left: 680px; margin-top: 80px">
        <a asp-action="Index" class="btn btn-success" id="botones" style="margin-right: 10px">Regresar</a>
        <a asp-action="Edit" asp-route-id="@Model?.Nit" class="btn btn-sucess" id="botonesRegistro">Actualizar</a>
    </div>

</div>

<hr style="margin-top: 60px">
<footer class="text-break" style="margin-left: 1110px">
    <p>
        ©2024 Libros Para Todos S.A - Todos los Derechos Reservados
    </p>
</footer>

